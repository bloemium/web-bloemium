{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/main.css --minify",
    "staging": "npm run staging:css && remix build --sourcemap",
    "staging:css": "tailwindcss -o ./app/main.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/main.css --watch",
    "start": "remix-serve build",
    "refresh": "rm -rf node_modules && npm i"
  },
  "dependencies": {
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/serve": "1.7.0",
    "concurrently": "7.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "eslint": "8.20.0",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": ">=14"
  }
}
