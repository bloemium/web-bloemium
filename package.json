{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles/main.css --minify",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/styles/main.css --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "setup": "npm run refresh && husky install && npm run validate",
    "staging": "npm run staging:css && remix build --sourcemap",
    "staging:css": "tailwindcss -o ./app/styles/main.css",
    "start": "remix-serve build",
    "refresh": "rm -rf node_modules && npm i",
    "validate": "npm run lint && npm run format:check"
  },
  "dependencies": {
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/serve": "1.7.0",
    "concurrently": "7.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.2"
  },
  "engines": {
    "node": ">=14"
  }
}
